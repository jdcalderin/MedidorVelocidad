<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.josedaniel.medidorvelocidad.ConfiguracionActivity"
    tools:showIn="@layout/activity_configuracion">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <Button
            android:id="@+id/btnConfigBasica"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnclickConfiguracionBasica"
            android:text="Configuración Basica" />

        <Button
            android:id="@+id/btnConfiBluetoh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnclickConfiguracionBluet"
            android:text="Configuración Bluetooth" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
